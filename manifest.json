{
    "manifest_version": 2,
    "name": "Page Visit Tracker",
    "version": "1.0",
    "description": "Track and limit visits to specific websites",
    "permissions": [
      "tabs",
      "storage",
      "webNavigation",
      "notifications",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "scripts": ["background.js"]
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }